{
  "formatters": [
    {
      "extensions": [".py", ".pyi"],
      "commands": [
        ["ruff", "format", "{file}"],
        ["ruff", "check", "--fix", "{file}"]
      ],
      "install_hint": "pip install ruff",
      "enabled": true
    },
    {
      "extensions": [".js", ".jsx", ".ts", ".tsx", ".mjs", ".cjs"],
      "commands": [
        ["prettier", "--write", "{file}"],
        ["eslint", "--fix", "{file}"]
      ],
      "install_hint": "npm install -g prettier eslint",
      "enabled": true
    },
    {
      "extensions": [".json", ".yaml", ".yml"],
      "commands": [
        ["prettier", "--write", "{file}"]
      ],
      "install_hint": "npm install -g prettier",
      "enabled": true
    },
    {
      "extensions": [".sh", ".bash"],
      "commands": [
        ["shfmt", "-i", "2", "-w", "{file}"]
      ],
      "install_hint": "go install mvdan.cc/sh/v3/cmd/shfmt@latest  (or: brew install shfmt)",
      "enabled": true
    },
    {
      "extensions": [".go"],
      "commands": [
        ["gofmt", "-w", "{file}"],
        ["goimports", "-w", "{file}"]
      ],
      "install_hint": "Go toolchain includes gofmt. goimports: go install golang.org/x/tools/cmd/goimports@latest",
      "enabled": true
    },
    {
      "extensions": [".rs"],
      "commands": [
        ["rustfmt", "{file}"]
      ],
      "install_hint": "rustup component add rustfmt",
      "enabled": true
    },
    {
      "extensions": [".css", ".scss", ".less"],
      "commands": [
        ["prettier", "--write", "{file}"]
      ],
      "install_hint": "npm install -g prettier",
      "enabled": true
    },
    {
      "extensions": [".html", ".htm"],
      "commands": [
        ["prettier", "--write", "{file}"]
      ],
      "install_hint": "npm install -g prettier",
      "enabled": true
    },
    {
      "extensions": [".md", ".mdx"],
      "commands": [
        ["__markdown__"]
      ],
      "enabled": true
    }
  ]
}
