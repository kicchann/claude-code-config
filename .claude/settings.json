{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && ./.claude/hooks/gh-setup.sh"
          },
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && ./.claude/hooks/structured-cli-tools-setup.sh",
            "timeout": 300
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && ./.claude/hooks/format-code/format-code.py",
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && ./.claude/hooks/sounds/complete-sound.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && node ./.claude/hooks/analytics/analyze-custom-commands.js",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true
  },
  "enabledMcpjsonServers": ["context7"],
  "permissions": {
    "allow": [
      "Bash(pytest:*)",
      "Bash(npm test:*)",
      "Bash(npm run test:*)",
      "Bash(ruff:*)",
      "Bash(npm run lint:*)",
      "Bash(black:*)",
      "Bash(npm run format:*)",
      "Bash(npm install:*)",
      "Bash(pip install:*)",
      "Bash(npm run build:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh run watch:*)",
      "Bash(git branch -d:*)",
      "Bash(git branch -D:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git stash:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue close:*)",
      "Bash(gh issue create:*)",
      "Bash(docker compose up:*)",
      "Bash(docker-compose up:*)",
      "Bash(docker compose down:*)",
      "Bash(docker-compose down:*)",
      "Bash(docker logs:*)",
      "Bash(docker compose logs:*)",
      "Bash(alembic:*)",
      "Bash(npm run migrate:*)",
      "Bash(pytest --cov:*)",
      "Bash(npm run coverage:*)",
      "Bash(npm audit:*)",
      "Bash(pip-audit:*)",
      "Bash(ls:*)",
      "Bash(df:*)",
      "Bash(du:*)",
      "Bash(ps:*)",
      "Bash(env)",
      "Bash(printenv:*)",
      "Bash(ping:*)",
      "Bash(curl:*)",
      "Bash(stat:*)",
      "Bash(mkdir:*)",
      "Bash(rm:*)",
      "Bash(mypy:*)",
      "Bash(npm run type-check:*)",
      "Bash(npm list:*)",
      "Bash(pip list:*)",
      "Bash(npm run clean:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr comment:*)"
    ],
    "deny": [
      "Bash(gh pr merge:*)",
      "Bash(git push * --force)",
      "Bash(git push * -f)",
      "Bash(git reset --hard:*)",
      "Bash(git push * --delete)",
      "Bash(git push * -d)",
      "Bash(git rebase -i:*)",
      "Bash(git commit * --no-verify)",
      "Bash(git push * --no-verify)",
      "Bash(git config:*)",
      "Bash(git clean -f:*)",
      "Bash(git checkout -f:*)",
      "Bash(git checkout * --force)",
      "Bash(git restore -f:*)",
      "Bash(git restore * --force)",
      "Bash(rm -rf:*)"
    ]
  }
}
